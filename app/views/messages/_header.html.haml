.header 
  .header__wrapper
    = link_to "経済ニュース", "https://m.finance.yahoo.co.jp/fx/marketcalendar", class: "header__btn"
    .header-diary
      = link_to "foregin diary", root_path, class: "header-diary" 

  .grid
    -if user_signed_in?
      .grid__wrapper
        = link_to "マイページ", "/users/#{current_user.id}", method: :get
